# Local devnet overrides for ethpandaops/ethereum-genesis-generator

# Consensus preset: use "minimal" for small local networks
export PRESET_BASE="minimal"

# Execution layer chain ID
export CHAIN_ID="1337"

# Validator count (minimum 1)
export NUMBER_OF_VALIDATORS="1"

# Genesis timing
export GENESIS_DELAY="20"

# Mnemonic used for both EL premine and CL validator keys (DO NOT commit a real one)
export EL_AND_CL_MNEMONIC="<REPLACE_WITH_24_WORD_MNEMONIC>"

# Withdrawal credentials (0x00 = BLS, withdrawal address ignored)
export WITHDRAWAL_TYPE="0x00"
export WITHDRAWAL_ADDRESS="0x0000000000000000000000000000000000000000"

# Optional premine map or contract overrides (JSON strings)
export EL_PREMINE_ADDRS="{}"
export ADDITIONAL_PRELOADED_CONTRACTS="{}"
